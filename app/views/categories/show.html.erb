<h1>Products in <%= @category.name %> Category</h1>
<table>
  <thead>

  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.quantity %></td>
      <td><%= link_to 'Show', category_product_path(@category,product) %></td>
      <td><%= link_to 'Edit', edit_category_product_path(@category,product) %></td>
      <td><%= link_to 'Destroy', category_product_path(@category,product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add new Product', new_category_product_path(@category) %>
<br>
<%= link_to 'Back', categories_path %>
